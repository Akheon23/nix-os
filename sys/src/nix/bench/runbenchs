#!/bin/rc

echo benchs...
cd /sys/src/nix/bench
. tools
failed=()
benchs=[0-9]*
if(test -e k[0-9]*)
	benchs=($benchs k[0-9]*)
for(t in $benchs){
	cd $t || fail cannot cd into benchs $t
	if(test -e FAIL)
		failed=($failed $t)
	if not{
		if(! test -e output && ! test -e FAIL) {
			echo running bench $t
			if(test -x kern && ! test -e koutput){
				log running kern for bench $t
				if(! kern >koutput >[2=1]){
					touch FAIL
					fail bench $t failed
				}
				reboot
			}
			if(! runbench>output >[2=1]){
				touch FAIL
				fail bench $t failed
			}
			echo bench $t ok
		}
	}
	cd ..
}
if(! ~ $#failed 0)
	echo benchs $failed failed
if not
	echo all benchs done

rm /cfg/$sysname/runbenchs
